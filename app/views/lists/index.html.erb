<div class="container mt-5">
  <h1>All lists of movies</h1>

  <ul>
    <% @lists.each do |list| %>
      <li>
        <%= link_to list.name, list_path(list) %>
        <span><%= link_to "edit", edit_list_path(list) %></span>
      
      </li>
    <% end %>
  </ul>
<br>

<%= link_to "Create a new list", new_list_path, class: "btn btn-secondary" %>
</div>

